<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.example.appchatrealtime.bottomnavigation.listmessage.viewmodel.ChatViewModel" />
        <variable
            name="fragment"
            type="com.example.appchatrealtime.bottomnavigation.listmessage.view.chat.ChatFragment" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:src="@drawable/personal1"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/_5sdp"
                app:imageUri="@{viewmodel.linkPhotoGallery}"
                android:onClick="@{(view)-> viewmodel.onClick(view)}"
                android:layout_height="@dimen/_100sdp"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
