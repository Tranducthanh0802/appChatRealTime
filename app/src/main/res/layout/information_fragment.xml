<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.example.appchatrealtime.viewmodels.InformationViewmodel" />
       <variable
            name="user"
            type="com.example.appchatrealtime.model.User" />
        <variable
            name="fragment"
            type="com.example.appchatrealtime.views.InformationFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            app:imageUri="@{user.linkPhoto}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@drawable/recyclerview"
            >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/_80sdp">
             <de.hdodenhof.circleimageview.CircleImageView
                 android:layout_width="@dimen/_50sdp"
                 android:layout_height="@dimen/_50sdp"
                 app:imageUri="@{user.linkPhoto}"
                 android:layout_centerVertical="true"
                 android:id="@+id/img_avata_IF"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/img_avata_IF"
                 android:layout_centerVertical="true"
                 android:text="@{user.fullName}"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:textSize="@dimen/sizeTitle"
                 android:id="@+id/txt_Name"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/img_avata_IF"
                 android:layout_centerVertical="true"
                 android:text="@{user.email}"
                 android:layout_below="@id/txt_Name"
                android:textSize="@dimen/edit"
                 android:id="@+id/txt_email"
                 />
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/edit"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{(view)-> viewmodel.onClickEdit(view)}"
                />
         </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="#EFEEEE"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="@dimen/_50sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/language"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
                <TextView
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="match_parent"
                    android:text="@string/ngongngu"
                    android:textColor="@color/black"
                    android:background="@drawable/topic_adap"
                    android:textSize="@dimen/edit"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="@string/tiengviet"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    android:textSize="@dimen/text"
                    android:drawableRight="@drawable/right"
                    />
            </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="@dimen/_50sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/thongbao"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="match_parent"
                    android:text="@string/thongbao"
                    android:textColor="@color/black"
                    android:background="@drawable/topic_adap"
                    android:textSize="@dimen/edit"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableRight="@drawable/right"
                    app:backgroundTint="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="@dimen/_50sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="match_parent"
                    android:text="@string/phienbanungdung"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/edit"
                    android:gravity="left|center"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="#EFEEEE"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:onClick="@{(view)-> viewmodel.onClickOut(view)}"
                android:layout_height="@dimen/_50sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/logout"
                    android:layout_marginTop="@dimen/_15sdp"
                    />
                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="match_parent"
                    android:text="@string/dangxuat"

                    android:textColor="@color/red"
                    android:textSize="@dimen/edit"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>